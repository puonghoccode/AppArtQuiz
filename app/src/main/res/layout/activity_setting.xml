<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@color/royal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_to_main_btn"
            android:layout_gravity="start"
            android:textColor="@color/white"
            android:fontFamily="serif"
            android:textSize="15sp"
            android:text="Back To Quiz"
            android:backgroundTint="@color/orange"/>

        <RelativeLayout
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_account"
                app:tint="@color/white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="uruh9rjrijijei"
            android:layout_margin="12dp"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:textColor="@color/yellow"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_email_txt"
            android:text="ueubygy@sirjniuh.com"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="serif"
            android:textColor="@color/gray"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/change_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:layout_margin="2dp"
            android:textColor="@color/royal"
            android:text="My Profile"
            android:textSize="15sp" />

        <Button
            android:id="@+id/result_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:layout_margin="2dp"
            android:textColor="@color/royal"
            android:text="View Records"
            android:textSize="15sp" />

            <Button
                android:id="@+id/profile_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:fontFamily="serif"
                android:textColor="@color/royal"
                android:layout_margin="2dp"
                android:text="Logout"
                android:textSize="15sp" />

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="@color/red"
                android:fontFamily="serif"
                android:text="Delete Account"
                android:textSize="15sp" />


        </LinearLayout>
</RelativeLayout>